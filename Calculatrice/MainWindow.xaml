<Window x:Class="Calculatrice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculatrice"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="300">
    <Window.Resources>
        
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <TextBox Name="outputDisplay" Text="0" Grid.Row="0"  IsReadOnly="True"/>
        <Grid Grid.Row="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <local:UserControl1 Grid.Row="0" Grid.Column="0" />
            <local:UserControl1 Grid.Row="1" Grid.Column="0" />
            <local:UserControl1 Grid.Row="2" Grid.Column="0" />
            <local:UserControl1 Grid.Row="3" Grid.Column="0" />
            <local:UserControl1 Grid.Row="4" Grid.Column="0" />
            <local:UserControl1 Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"/>
            <local:UserControl1 Grid.Row="0" Grid.Column="1" />
            <local:UserControl1 Grid.Row="1" Grid.Column="1" />
            <local:UserControl1 Grid.Row="2" Grid.Column="1" />
            <local:UserControl1 Grid.Row="3" Grid.Column="1" />
            <local:UserControl1 Grid.Row="4" Grid.Column="1" />
            <local:UserControl1 Grid.Row="0" Grid.Column="2" />
            <local:UserControl1 Grid.Row="1" Grid.Column="2" />
            <local:UserControl1 Grid.Row="2" Grid.Column="2" />
            <local:UserControl1 Grid.Row="3" Grid.Column="2" />
            <local:UserControl1 Grid.Row="4" Grid.Column="2" />
            <local:UserControl1 Grid.Row="5" Grid.Column="2" />
            <local:UserControl1 Grid.Row="0" Grid.Column="3" />
            <local:UserControl1 Grid.Row="1" Grid.Column="3" />
            <local:UserControl1 Grid.Row="2" Grid.Column="3" />
            <local:UserControl1 Grid.Row="3" Grid.Column="3" />
            <local:UserControl1 Grid.Row="4" Grid.Column="3" Grid.RowSpan="2"/>
        </Grid>



        <!--<Button x:Name="button" Content="5" Style="{StaticResource BlackGradientButton}"/>-->
    </Grid>
</Window>
